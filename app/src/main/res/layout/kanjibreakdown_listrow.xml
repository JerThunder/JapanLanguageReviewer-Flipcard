<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/kanjiImage"
        android:layout_width="80dp"
        android:background="@color/blue"
        android:layout_height="80dp"

        />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/kanjiImage"
        android:text="hello world"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/txtkunyomi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@id/kanjiImage"
        android:text="Kun: ありがとう"
        android:textStyle="italic"
        android:maxLength="50"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/txtonyomi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtkunyomi"
        android:layout_toRightOf="@id/kanjiImage"
        android:text="On:　ございます "
        android:textStyle="italic"
        android:maxLength="50"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/txtlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtonyomi"
        android:layout_toRightOf="@id/kanjiImage"
        android:text="Level: N4"
        android:textStyle="italic"
        android:maxLength="50"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />







</RelativeLayout>