<!-- Left Exit Animation -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Slide out to the left -->
    <objectAnimator
        android:valueFrom="0"
        android:valueTo="-800"
        android:propertyName="translationX"
        android:duration="500" />

    <!-- Fade out -->
    <objectAnimator
        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:propertyName="alpha"
        android:duration="250" />
</set>